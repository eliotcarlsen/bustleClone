<h2>Add New Story</h2>
<div class="new-story">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="title">Story Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="body">Story Body</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <div class="form-group">
      <label for="featured">Featured</label>
      {{input value=featured id="featured"}}
    </div>


    <button {{action 'saveStory'}}>Save</button>
  </form>
</div>
